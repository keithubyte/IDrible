<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dribbble_background"
    tools:context="com.keith.idribbble.ui.CommentsActivity">

    <FrameLayout
        android:id="@+id/comments_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/shot_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:name="com.keith.idribbble.ui.ShotInfoFragment"
        tools:layout="@layout/fragment_shot_info" />
</android.support.v4.widget.DrawerLayout>
